{
	"compilerOptions": {
		"strict": true,
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"outDir": "./dist",
		"baseUrl": ".",
		"rootDir": "./src",
		"skipLibCheck": true,
		"downlevelIteration": true,
		"lib": ["es2022", "DOM", "DOM.Iterable"],
		"moduleDetection": "force",
		"noUncheckedIndexedAccess": true,
		"resolveJsonModule": true,
		"target": "ES2022",
		"plugins": [{ "name": "next" }],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"isolatedModules": true,
		"esModuleInterop": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"paths": {
			"@orderbook/*": ["../orderbook/src/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"],
	"references": [{ "path": "../orderbook" }]
}
