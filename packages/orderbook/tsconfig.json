{
	"compilerOptions": {
		"strict": true,
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"composite": true,
		"outDir": "./dist",
		"baseUrl": ".",
		"rootDir": "./src",
		"skipLibCheck": true,
		"downlevelIteration": true,
		"lib": ["es2022", "DOM", "DOM.Iterable"],
		"moduleDetection": "force",
		"declaration": true,
		"noUncheckedIndexedAccess": true,
		"resolveJsonModule": true,
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler"
	},
	"include": ["src/**/*"],
	"exclude": ["tests", "*.ts"]
}
